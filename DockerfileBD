FROM centos
VOLUME /tmp
RUN yum install -y https://download.postgresql.org/pub/repos/yum/reporpms/EL-7-x86_64/pgdg-redhat-repo-latest.noarch.rpm
RUN yum install -y postgresql12-server 
RUN /usr/pgsql-12/bin/postgresql-12-setup initdb
RUN systemctl enable postgresql-12 
RUN systemctl start postgresql-12
RUN rm -rf /etc/localtime
RUN ln -s /usr/share/zoneinfo/America/Fortaleza /etc/localtime
RUN psql -U postgres -c "set timezone='America/Fortaleza';"